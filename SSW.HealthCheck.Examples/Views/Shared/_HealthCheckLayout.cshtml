@using System.Web.Mvc.Html
@using SSW.HealthCheck.Mvc5

<html>
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>SSW HealthCheck</title>
    
        <link type="text/css" href="@Url.Content("~/Content/healthcheck/healthcheck.css")" rel="stylesheet" />
        <link type="text/css" href="@Url.Content("~/Content/healthcheck/bootstrap.min.css")" rel="stylesheet" />
        <link type="text/css" href="@Url.Content("~/Content/healthcheck/angular-csp.css")" rel="stylesheet" />
    </head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SSW HealthCheck", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <img style="vertical-align: middle;" src="http://tv.ssw.com/wp-content/themes/detube/images/SSW-logo.png"> Powered by <a href="http://www.sswhealthcheck.com">SSW HealthCheck</a></p>
        </footer>
    </div>

    <script type="text/javascript" src="@Url.Content("~/Scripts/healthcheck/jquery-1.10.2.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/healthcheck/modernizr-2.6.2.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/healthcheck/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/healthcheck/angular.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentWithWildcard("~/Scripts", @"jquery\.signalR-\d{1,3}\.\d{1,3}\.\d{1,3}\.js", "jquery.signalR-2.0.2.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/SignalR/hubs")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/ssw.healthcheck.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
